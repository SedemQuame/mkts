@import "./config";
@import "./utils";
@import "./status";

* {
    color: var(--text-color);
    font-family: "Cabin Condensed", sans-serif;
    font-size: 1rem;
}

*::-webkit-scrollbar {
    width: 4px;
    height: 4px;
}

*::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px #c1c1c1;
    border-radius: 10px;
}

*::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 4px;
}

body {
    #app,
    #app #app-body {
        height: 100vh;
    }

    #app {
        display: grid;
        grid-template-columns: auto 1fr;
        grid-template-areas: "sidebar app-body";
    }

    #app-body {
        grid-area: app-body;
    }

    .container {
        margin-left: auto;
        margin-right: auto;

        @media screen and(min-width: 576px) {
            max-width: 480px;
        }

        @media screen and(min-width: 768px) {
            max-width: 640px;
        }

        @media screen and(min-width: 992px) {
            max-width: 720px;
        }

        @media screen and(min-width: 1200px) {
            max-width: 960px;
        }
    }

    .w-360 {
        max-width: 360px;
    }

    .w-640 {
        max-width: 640px;
    }

    .w-720 {
        max-width: 720px;
    }

    .image-container {
        overflow: hidden;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    .image-container.contain {
        img {
            object-fit: contain;
        }
    }

    .image-container.round {
        border-radius: 50%;
    }

    /***************************************************************/
    /************************** OVERRIDES **************************/
    /***************************************************************/
    label {
        color: #61646d;
        margin-bottom: 4px;
    }

    input,
    select,
    textarea,
    .form-input input,
    .form-input select,
    .form-input textarea {
        border-radius: 4px;
    }

    .btn {
        text-transform: uppercase;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:focus,
    .form-control:focus {
        box-shadow: none;
        border: 2px solid var(--primary-color);
    }

    .btn-primary:hover,
    .btn-primary:not(:disabled):not(.disabled):focus,
    .btn-primary:not(:disabled):not(.disabled):active {
        background-color: var(--primary-color-dark);
        border-color: var(--primary-color-dark);
    }

    .btn-primary:disabled {
        background-color: var(--primary-color-dark);
        border-color: var(--primary-color-dark);
        opacity: 0.5;
    }

    .btn-sm {
        font-size: 85%;
        padding: 2px 10px;
    }

    .card {
        .card-body {
            padding: 25px;
        }
    }

    .card.floating-card {
        border: none;
        box-shadow: 2px 2px 10px #c3c3c3;
        transition: box-shadow 0.3s;
    }

    .card.floating-card-action:hover {
        box-shadow: 4px 4px 10px #c0c0c0;
    }

    .react-simple-widget.transition-view > * {
        min-height: 100%;
        padding: 20px;
    }

    .react-simple-widget.loader span.spinner-border {
        color: white;
    }
}
