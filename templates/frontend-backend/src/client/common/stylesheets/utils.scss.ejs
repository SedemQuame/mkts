body {
    .flex-1-1 {
        flex: 1 1;
    }

    .primary-color {
        color: var(--primary-color);
    }

    .primary-color-dark {
        color: var(--primary-color-dark);
    }

    .error-color {
        color: var(--error-color);
    }

    .no-hover-decoration:hover {
        text-decoration: none;
    }

    .hover-pointer-cursor:hover {
        cursor: pointer;
    }

    .hide-overflow {
        overflow: hidden !important;
    }
}
